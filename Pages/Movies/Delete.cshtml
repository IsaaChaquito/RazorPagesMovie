@page "{id:int}"
@model RazorPagesMovie.Pages_Movies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div>

    <div class="flex flex-col min-w-64 items-center">

    <h1 class="mx-autod p-2 my-2 font-bold text-2xl text-center">Are you sure you want to delete this movie?</h1>

    <div class="w-full flex flex-col max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"> @Html.DisplayFor(model => model.Movie.Title)</h5>
        </a>

            <p class="ml-5 mb-3 font-normal text-gray-700 dark:text-gray-400">
                <span class="font-boldd text-white">@Html.DisplayNameFor(model => model.Movie.ReleaseDate):</span>
                @Html.DisplayFor(model => model.Movie.ReleaseDate)
            </p>
            <p class="mb-3 ml-5 font-normal text-gray-700 dark:text-gray-400">
                <span class="font-boldd text-white">@Html.DisplayNameFor(model => model.Movie.Genre):</span>
                @Html.DisplayFor(model => model.Movie.Genre)
            </p>
            <p class="mb-3 ml-5 font-normal text-gray-700 dark:text-gray-400">
                <span class="font-boldd text-white">@Html.DisplayNameFor(model => model.Movie.Price):</span>
                @Html.DisplayFor(model => model.Movie.Price)
            </p>
        
        <form method="post">
            <input type="hidden" asp-for="Movie.Id" />
            <input class="mx-auto w-full text-center text-sm rounded px-3 py-2 text-white bg-red-500 hover:bg-red-600" type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    
    
