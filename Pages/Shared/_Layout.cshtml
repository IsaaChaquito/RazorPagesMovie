@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie</title>
    <script type="importmap"></script>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body class="">
    <header>
        <nav class="bg-white border-gray-200 dark:bg-gray-900">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            

            <div class=" w-full block" id="navbar-default">
            <ul class="font-medium border-gray-100 rounded-lg  flex space-x-8 rtl:space-x-reverse mt-0 border-0 bg-white dark:bg-gray-900 dark:border-gray-700">
                <li>
                    <a class="@(currentPage == "/Index" ? " text-blue-400 " : " text-white ") block py-2 px-3  rounded-sm bg-transparent  p-0  " asp-area="" asp-page="/Index">Home</a>
                </li>
                <li>
                    <a  class="@(currentPage == "/Movies/Index" ? " text-blue-400 " : " text-white ") block py-2 px-3  rounded-sm bg-transparent  p-0  " asp-area="" asp-page="/Movies/Index">Movies</a>
                </li>
                <li>
                    <a  class="@(currentPage == "/Privacy" ? "text-blue-400" : "text-white") block py-2 px-3  rounded-sm bg-transparent  p-0  " asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
            </ul>
            </div>
        </div>
        </nav>
    </header>
    <div class="containerd w-full">
        <main role="main" class="pb-3 h-[calc(100vh-136px)] mx-autod w-full">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white dark:bg-gray-900 bottom-0">
        <div class="mx-auto w-full max-w-screen-xl p-4 py-6 ">
        <div class="flex items-center justify-between">
            <span class="text-sm text-gray-500 text-center dark:text-gray-400">© 2025 <a sp-area="" asp-page="/Movies/Index" class="hover:underline">RpMovie</a>. All Rights Reserved.
            </span>
            <div class="flex justify-center mt-0">

                <a href="https://www.github.com/IsaaChaquito" target="_blank" class="text-gray-500 hover:text-gray-900 dark:hover:text-white ms-5">
                    <svg class="w-8 h-8" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
